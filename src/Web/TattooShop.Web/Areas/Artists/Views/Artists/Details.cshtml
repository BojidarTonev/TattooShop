@model DisplayArtistDetailsViewModel

<section class="probootstrap-slider flexslider">
    <ul class="slides">
        <li style="background-image: url(@Model.ImageUrl);" class="overlay2">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="slides-text probootstrap-animate" data-animate-effect="fadeIn">
                            <h2>@Model.FirstName @Model.LastName</h2>
                            <p>Tattoos done in studio: @Model.TattoosDone</p>
                            <p>@Model.Autobiography</p>
                            <a asp-area="Artists" asp-controller="Artists" asp-action="BookTattoo" asp-route-id="@Model.Id" class="btn btn-success">Book tattoo?</a>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    </ul>
</section>
<section class="probootstrap-section">
    <div class="container" style="background-color: #000">
        <div class="row">
            <div class="col-md-12 text-center section-heading probootstrap-animate">
                <h2 class="probootstrap-card-heading mb0 text-color-white">Recent Work</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var tattoo in @Model.Tattoos)
            {
                <div class="col-md-4 m-t-40 probootstrap-animate ">
                    <div class="probootstrap-card with-hover">
                        <div class="probootstrap-card-media">
                            <a asp-area="Tattoos" asp-controller="Tattoos" asp-action="Details" asp-route-id="@tattoo.TattooId"><img src="@tattoo.TattooUrl" class="img-responsive img-border image_css"></a>
                        </div>
                        <div class="probootstrap-card-text">
                            <h2 class="probootstrap-card-heading mb0 text-color-white">@tattoo.TattooRelevantName</h2>
                            <p class="category">@tattoo.TattooStyle</p>
                            <p><a asp-area="Tattoos" asp-controller="Tattoos" asp-action="Details" asp-route-id="@tattoo.TattooId" class="btn btn-danger">View details</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>