@model AllTattoosViewModelWrapper

@{
    ViewData["Title"] = "Welcome to our tattoo gallery!";
    var tattooStyles = this.ViewData["TattooStyles"] as IEnumerable<SelectListItem>;
}

<section class="probootstrap-slider flexslider">
    <ul class="slides">
        <li style="background-image: url(https://res.cloudinary.com/site-stuff/image/upload/q_100/v1545019322/tattooShop/7-Doors-Featured.jpg);" class="overlay2">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="slides-text probootstrap-animate" data-animate-effect="fadeIn">
                            <h2>@ViewData["Title"]</h2>
                            <small>Here you can see all the artowrk that has been done in our studio.</small>
                            <small></small>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    </ul>
</section>
<section class="probootstrap-section">
    <div class="container">
        <div class="row overlap">
            <div class="col-md-4">
                <div class="service left-icon probootstrap-animate">
                    <div class="icon">
                        <i class="icon-pencil22"></i>
                    </div>
                    <div class="text">
                        <h3 class="heading">Tattoo styles filter</h3>
                        <p>Filter the products that you want to see:</p>
                        @using(Html.BeginForm()) {

                            <select asp-for="DisplayCategory" class="btn btn-danger dropdown-toggle" type="button" data-toggle="dropdown">
                                @foreach(var c in @tattooStyles)
                                {
                                    <option value="@c.Value">@c.Text</option>
                                }
                            </select>

                            <button class="btn btn-black" type="submit" value="Submit">Submit</button>

                        }
                        @*<form asp-area="Tattoos" asp-controller="Tattoos" asp-action="All" method="post">
                            <div class="dropdown">
                                <select asp-items="tattooStyles" asp-for="@Model.DisplayCategory" class="btn btn-danger dropdown-toggle" type="button"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></select>
                            </div><br/>
                            <button class="btn btn-black" type="submit" value="Submit">Submit</button>
                        </form>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container">
    @foreach (var tattoo in @Model.Tattoos)
    {
        <div class="col-md-4 probootstrap-animate ">
            <div class="probootstrap-card with-hover">
                <div class="probootstrap-card-media">
                    <a asp-area="Tattoos" asp-controller="Tattoos" asp-action="Details" asp-route-id="@tattoo.Id"><img src="@tattoo.TattooUrl" class="img-responsive img-border image_css"></a>
                </div>
                <div class="probootstrap-card-text">
                    <h2 class="probootstrap-card-heading mb0">@tattoo.TattooRelevantName</h2>
                    <p class="category">@tattoo.TattooStyle</p>
                    <p><a asp-area="Tattoos" asp-controller="Tattoos" asp-action="Details" asp-route-id="@tattoo.Id">View details</a></p>
                </div>
            </div>
        </div>
    }
</div>
