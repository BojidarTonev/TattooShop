@model ProductDetailsViewModel

<section class="probootstrap-slider flexslider">
    <ul class="slides">
        <li style="background-image: url(@Model.ImageUrl);" class="overlay2">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="slides-text probootstrap-animate" data-animate-effect="fadeIn">
                            <h2>@Model.Name</h2>
                            <h3>@Model.Description</h3>
                            <h4>Price: $@Model.Price</h4>
                            <p><a href="@Model.ImageUrl">see raw image</a></p>
                            <br />
                            <a asp-area="Orders" asp-controller="Orders" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-success">Order?</a>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    </ul>
</section>
<section class="probootstrap-section">
    <div class="container" style="background-color: #000">
        <div class="row">
            <div class="col-md-12 text-center section-heading probootstrap-animate">
                <h2 class="probootstrap-card-heading mb0 text-color-white">Other similar products</h2>
            </div>
        </div>
        <div class="row">
            <div class="container" style="background-color: #000">
                <div class="card card-outline-secondary my-4">
                    @foreach (var product in @Model.SimilarProducts)
                    {
                        <div class="col-md-4 m-t-40 probootstrap-animate ">
                            <div class="probootstrap-card with-hover">
                                <div class="probootstrap-card-media">
                                    <a asp-area="Products" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id"><img src="@product.ImageUrl" class="img-responsive img-border image_css"></a>
                                </div>
                                <div class="probootstrap-card-text">
                                    <h2 class="probootstrap-card-heading mb0 text-color-white">@product.Name</h2>
                                    <p class="category">@product.Category</p>
                                    <p><a asp-area="Products" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-danger">View details</a></p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
