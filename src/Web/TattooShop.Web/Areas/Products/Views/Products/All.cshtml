@model IEnumerable<Product>

@{
    var productCategories = this.ViewData["ProductsCategories"] as IEnumerable<SelectListItem>;
    
}

<section class="probootstrap-slider flexslider">
    <ul class="slides">
        <li style="background-image: url(https://pbs.twimg.com/media/ClvVERRVEAEmTMv.jpg);" class="overlay2">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="slides-text probootstrap-animate" data-animate-effect="fadeIn">
                            <h2>The tattoo care products we offer!</h2>
                            <small>Here you find quality products on reasonable prices, also we have a lot of nice offers to seldom customers!</small>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    </ul>
</section>
<section class="probootstrap-section">
    <div class="container">
        <div class="row overlap">
            <div class="col-md-4">
                <div class="service left-icon probootstrap-animate">
                    <div class="icon">
                        <i class="icon-filter"></i>
                    </div>
                    <div class="text">
                        <h3 class="heading">Filter the category</h3>
                        <p>Quality matters! Current category products:</p>
                        <form asp-controller="Products" asp-action="All" method="post">
                            <div class="dropdown">
                                <select asp-items="productCategories" class="btn btn-danger dropdown-toggle" type="button"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></select>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service left-icon probootstrap-animate">
                    <div class="icon">
                        <i class="icon-paper-plane"></i>
                    </div>
                    <div class="text">
                        <h3 class="heading">Fast and safe shipping</h3>
                        <p>We offer very fast and safe delivery and shipment all around europe to keep our customers satisfied.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service left-icon probootstrap-animate">
                    <div class="icon">
                        <i class="icon-emoji-happy"></i>
                    </div>
                    <div class="text">
                        <h3 class="heading">Having trouble or questions?</h3>
                        <p>Get in touch with us!</p>
                        <p><a asp-area="" asp-controller="Home" asp-action="Contact" asp-route-id="Piercing">Contact</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container">
    @foreach (var product in @Model)
    {
        <div class="col-md-4 probootstrap-animate">
            <div class="probootstrap-card with-hover">
                <div class="probootstrap-card-media">
                    <a href="single-page.html"><img src="@product.ImageUrl" class="img-responsive img-border"></a>
                </div>
                <div class="probootstrap-card-text">
                    <h2 class="probootstrap-card-heading mb0">@product.Name</h2>
                    <p class="category">@product.Category</p>
                    <p><a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">View details</a></p>
                </div>
            </div>
        </div>

        @*<div class="col-lg-4 col-md-4 mb-4">
                <div class="card h-100">
                    <a href="#"><img class="card-img-top" src="@product.ImageUrl" alt=""></a>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">@product.Name</a>
                        </h4>
                        <h5>$@product.Price</h5>
                        <p class="card-text">@product.Description</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                    </div>
                </div>
            </div>*@
    }
</div>


