@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<section class="probootstrap-slider flexslider">
    <ul class="slides">
        <li style="background-image: url(http://www.tickwallpaper.com/wp-content/uploads/Door-32135465807.jpg);" class="overlay2">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="slides-text probootstrap-animate" data-animate-effect="fadeIn">
                            <h2>@ViewData["Title"]</h2>
                            <h4>Enter your email and we will send you a new password that you can change later.</h4>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    </ul>
</section>
<hr />
<section class="probootstrap-section">
    <div class="container justify-content-center">
        <div class="probootstrap-animate overlap">
            <form asp-page="/Account/Login" method="post" class="probootstrap-form probootstrap-form-box mb50">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</section>
